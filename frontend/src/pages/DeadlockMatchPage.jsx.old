import React, { useState, useEffect, useRef } from 'react';
import { useParams } from 'react-router-dom';
import TugWar from '../components/deadlock/TugWar';
import QuestionPanel from '../components/deadlock/QuestionPanel';
import CodeEditor from '../components/deadlock/CodeEditor';
import OutputPanel from '../components/deadlock/OutputPanel';

const DeadlockMatchPage = () => {
    const { matchId } = useParams();
    const [matchData, setMatchData] = useState(null);
    const [loading, setLoading] = useState(true);
    const [error, setError] = useState(null);
    const [isSubmitting, setIsSubmitting] = useState(false);
    const [submissionResult, setSubmissionResult] = useState(null);

    // Initialize teamId from deadlockContext > legacy > empty
    const [teamId, setTeamId] = useState(() => {
        try {
            const ctx = JSON.parse(localStorage.getItem('deadlockContext') || '{}');
            if (ctx.matchId === matchId && ctx.teamId) return ctx.teamId;
            return localStorage.getItem('deadlock_team_id') || '';
        } catch {
            return '';
        }
    });

    // Poll interval ref to clear on unmount
    const pollRef = useRef(null);

    const fetchMatchState = async () => {
        try {
            const response = await fetch(`/api/public/deadlock/match/${matchId}`);
            if (response.status === 404) {
                localStorage.removeItem('deadlockContext');
                throw new Error('MATCH_NOT_FOUND');
            }
            if (!response.ok) throw new Error('Failed to fetch match');
            const data = await response.json();
            setMatchData(data);
            setLoading(false);

            // Update Context
            const currentContext = JSON.parse(localStorage.getItem('deadlockContext') || '{}');
            const newContext = {
                ...currentContext,
                matchId,
                questionId: data.currentQuestion?._id,
                teamId: teamId || currentContext.teamId // Keep existing teamId if current is empty
            };
            localStorage.setItem('deadlockContext', JSON.stringify(newContext));

        } catch (err) {
            console.error(err);
            setError(err.message);
            setLoading(false);
            if (err.message === 'MATCH_NOT_FOUND') {
                localStorage.removeItem('deadlockContext');
            }
        }
    };

    useEffect(() => {
        // Developer Feedback Guardrail
        if (!matchId && process.env.NODE_ENV === 'development') {
            console.warn('[Deadlock] Invalid entry route â€” no matchId found in URL params.');
        }

        fetchMatchState();

        pollRef.current = setInterval(fetchMatchState, 2000);

        return () => {
            if (pollRef.current) clearInterval(pollRef.current);
        };
    }, [matchId]);

    const handleSubmit = async (code, language) => {
        setIsSubmitting(true);
        try {
            // Need a valid teamId. 
            if (!teamId) {
                const manualId = prompt("Enter your Team ID to submit:");
                if (manualId) {
                    setTeamId(manualId);
                    // Update context with new teamId
                    const ctx = JSON.parse(localStorage.getItem('deadlockContext') || '{}');
                    localStorage.setItem('deadlockContext', JSON.stringify({ ...ctx, teamId: manualId }));
                    localStorage.setItem('deadlock_team_id', manualId); // Legacy backup
                } else {
                    setIsSubmitting(false);
                    return;
                }
            }

            const response = await fetch('/api/public/deadlock/submit', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({
                    matchId,
                    teamId: teamId || localStorage.getItem('deadlock_team_id'),
                    language,
                    code
                })
            });

            const result = await response.json();

            if (result.success) {
                // Happy path: Tug updates, maybe question changes
                // Immediate refetch to sync state
                await fetchMatchState();
                setSubmissionResult(result);
            } else {
                setSubmissionResult(result);
            }

        } catch (err) {
            console.error(err);
            alert("Network error on submission");
        } finally {
            setIsSubmitting(false);
        }
    };

    if (loading) {
        return (
            <div className="h-screen bg-[#0a0a0a] flex flex-col items-center justify-center text-white">
                <div className="flex flex-col items-center gap-4 animate-pulse">
                    <div className="w-16 h-16 border-4 border-blue-600 border-t-transparent rounded-full animate-spin" />
                    <div className="text-xl font-mono tracking-[0.3em] text-blue-500 uppercase">
                        Establishing Uplink...
                    </div>
                </div>
            </div>
        );
    }

    if (error === 'MATCH_NOT_FOUND') {
        return (
            <div className="min-h-screen bg-[#0a0a0a] text-white flex flex-col items-center justify-center p-6 bg-[radial-gradient(ellipse_at_center,_var(--tw-gradient-stops))] from-gray-900 to-black">
                <div className="max-w-md w-full text-center border border-red-900/50 bg-red-950/10 p-12 rounded-2xl backdrop-blur-sm">
                    <div className="text-6xl mb-6">ðŸš«</div>
                    <h1 className="text-3xl font-black text-red-500 mb-4 uppercase tracking-widest">Signal Lost</h1>
                    <div className="h-px w-24 bg-red-800 mx-auto mb-6" />
                    <p className="text-gray-400 mb-8 font-mono text-sm leading-relaxed">
                        TARGET COORDINATES INVALID<br />
                        MATCH_ID: <span className="text-red-400">{matchId}</span>
                    </p>
                    <button
                        onClick={() => {
                            window.location.href = '/login';
                        }}
                        className="px-8 py-3 bg-red-600 hover:bg-red-500 text-white font-bold rounded uppercase tracking-widest text-xs transition-all shadow-[0_0_20px_rgba(220,38,38,0.4)]"
                    >
                        Return to Base
                    </button>
                </div>
            </div>
        );
    }

    if (error) {
        return (
            <div className="h-screen bg-[#0a0a0a] flex flex-col items-center justify-center text-white p-6">
                <div className="max-w-lg w-full bg-gray-900 border border-red-500/30 p-8 rounded-xl text-center">
                    <h2 className="text-red-500 font-bold tracking-widest uppercase mb-2">System Error</h2>
                    <p className="text-gray-400 font-mono text-sm">{error}</p>
                    <button
                        onClick={() => window.location.reload()}
                        className="mt-6 px-6 py-2 bg-gray-800 hover:bg-gray-700 text-white text-xs uppercase tracking-widest font-bold rounded border border-gray-700 transition"
                    >
                        Retry Connection
                    </button>
                </div>
            </div>
        );
    }

    const isMatchFinished = matchData?.status === 'finished';

    return (
        <div className="h-screen bg-[#0a0a0a] text-white font-sans selection:bg-blue-500/30 overflow-hidden flex flex-col">
            {/* 1. Top Bar: Header + Rope */}
            <header className="shrink-0 border-b border-gray-800/50 bg-[#0a0a0a] z-50 relative">
                <div className="max-w-[1920px] mx-auto px-6 py-4">

                    {/* Top Row: Logo & Status */}
                    <div className="flex items-center justify-between mb-6">
                        <div className="flex items-center gap-3">
                            <div className="w-2 h-8 bg-blue-600 rounded-full shadow-[0_0_15px_rgba(37,99,235,0.5)]" />
                            <div>
                                <h1 className="text-xl font-black tracking-[0.2em] italic leading-none">
                                    DEADLOCK
                                </h1>
                                <span className="text-[10px] text-gray-500 font-mono tracking-widest uppercase">
                                    Competitive Uplink v3.1
                                </span>
                            </div>
                        </div>

                        {isMatchFinished ? (
                            <div className="px-4 py-1.5 bg-yellow-500/10 text-yellow-500 border border-yellow-500/20 rounded-full text-xs font-bold uppercase tracking-widest animate-pulse">
                                Session Concluded
                            </div>
                        ) : (
                            <div className="flex items-center gap-2 px-3 py-1 bg-green-500/5 text-green-500 border border-green-500/10 rounded-full text-xs font-bold uppercase tracking-widest">
                                <span className="w-2 h-2 rounded-full bg-green-500 animate-pulse" />
                                Live Uplink
                            </div>
                        )}
                    </div>

                    {/* The Rope - Center Stage */}
                    <div className="max-w-5xl mx-auto">
                        <TugWar
                            tugPosition={matchData.tugPosition}
                            maxPull={matchData.maxPull || 5}
                            teamA={matchData.teamA}
                            teamB={matchData.teamB}
                        />
                    </div>
                </div>
            </header>

            {/* 2. Main Content Grid */}
            <main className="flex-1 p-6 min-h-0 container mx-auto max-w-[1920px]">
                <div className="h-full grid grid-cols-1 lg:grid-cols-2 gap-6">

                    {/* Left Panel: Question */}
                    <div className="h-full min-h-0 animate-in fade-in slide-in-from-left-4 duration-500">
                        <QuestionPanel question={matchData.currentQuestion} />
                    </div>

                    {/* Right Panel: Editor + Output */}
                    <div className="h-full min-h-0 flex flex-col gap-4 animate-in fade-in slide-in-from-right-4 duration-500 delay-100">
                        <div className={`transition-all duration-500 ${submissionResult ? 'h-2/3' : 'h-full'}`}>
                            <CodeEditor
                                onSubmit={handleSubmit}
                                isSubmitting={isSubmitting}
                                disabled={isMatchFinished}
                            />
                        </div>

                        {submissionResult && (
                            <div className="h-1/3 animate-in fade-in slide-in-from-bottom-4 duration-500">
                                <OutputPanel
                                    result={submissionResult}
                                    onClose={() => setSubmissionResult(null)}
                                />
                            </div>
                        )}
                    </div>
                </div>
            </main>

            {/* Winner Overlay */}
            {isMatchFinished && matchData.winner && (
                <div className="fixed inset-0 z-50 flex items-center justify-center bg-black/90 backdrop-blur-sm animate-in fade-in duration-500">
                    <div className="text-center p-12 bg-[#0a0a0a] border border-gray-800 rounded-2xl shadow-2xl max-w-2xl w-full relative overflow-hidden group">
                        {/* Background Effects */}
                        <div className="absolute inset-0 bg-gradient-to-br from-blue-900/20 to-purple-900/20 opacity-50 group-hover:opacity-100 transition-opacity" />
                        <div className="absolute top-0 left-0 w-full h-1 bg-gradient-to-r from-transparent via-blue-500 to-transparent" />

                        <div className="relative z-10">
                            <h2 className="text-sm font-mono text-gray-500 uppercase tracking-[0.3em] mb-4">
                                Match Protocol Ended
                            </h2>
                            <h1 className="text-6xl font-black text-white mb-6 uppercase tracking-tighter italic">
                                Winner Declared
                            </h1>

                            <div className="py-8 my-8 border-y border-gray-800 bg-gray-900/50">
                                <div className="text-4xl md:text-5xl font-black text-transparent bg-clip-text bg-gradient-to-r from-blue-400 to-purple-400 tracking-tight drop-shadow-2xl">
                                    {matchData.winner.name || 'Unknown Team'}
                                </div>
                            </div>

                            <button
                                onClick={() => window.location.reload()}
                                className="px-8 py-3 bg-white text-black font-bold uppercase tracking-widest text-sm hover:bg-gray-200 transition-all rounded"
                            >
                                Sync State
                            </button>
                        </div>
                    </div>
                </div>
            )}
        </div>
    );
};

export default DeadlockMatchPage;
